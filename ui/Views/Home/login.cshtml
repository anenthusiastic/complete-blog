@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="/haz覺r/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="/haz覺r/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="/haz覺r/css/clean-blog.min.css" rel="stylesheet">
</head>
<body>
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/haz覺r/img/@ViewBag.header.imageName')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>@ViewBag.header.heading</h1>
            <div class="mt-5">
                <div class="alert alert-danger "  style="display:@ViewBag.validate;" role="alert">
                  Username or password is wrong!
                </div>
                <form method="POST" action="/Home/login" name="login" id="loginform" >
                    <div class="control-group">
                        <div class="form-group controls">
                        <input name="username" class="form-control" placeholder="Username" id="username"  required data-validation-required-message="Please enter your username.">
                        <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group controls">
                        <input name="password" class="form-control" placeholder="Password" id="password" required data-validation-required-message="Please enter your password">
                        <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
</body>